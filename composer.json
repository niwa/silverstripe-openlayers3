{
    "name": "catalyst/silverstripe-openlayers3",
    "type": "silverstripe-vendormodule",
    "description": "Catalyst's Openlayer3 for the Silverstripe framework",
    "keywords": [
        "silverstripe",
        "openlayers3"
    ],
    "authors": [
        {
            "name": "Andreas Piening",
            "email": "andreaspiening@catalyst.net.nz"
        },
        {
            "name": "Russell Michell",
            "email": "russellmichell@catalyst.net.nz"
        }
    ],
    "require": {
        "silverstripe/vendor-plugin": "^1.5.2",
        "php": ">=5.6",
        "silverstripe/recipe-cms": "^4.9.0",
        "ext-json": "*"
    },
    "extra": {
        "installer-name": "openlayers3",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "images",
            "css",
            "javascript"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "App\\OL3\\": "src/",
            "App\\OL3\\Tests\\": "tests/"
        }
    }
}
